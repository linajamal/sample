<odoo>
    <data>
        <record id="action_merge_device_os" model="ir.actions.act_window">
            <field name="name">Merge Device OS</field>
            <field name="res_model">merge.device.os</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_merge_device_os" name="Operating System"
        sequence="98" parent="stock.menu_stock_root"
        action="action_merge_device_os"/>

        <record id="view_merge_device_os_list" model="ir.ui.view">
            <field name="name">merge.device.os.list</field>
            <field name="model">merge.device.os</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                </list>
            </field>
        </record>

        <record id="view_merge_device_os_form" model="ir.ui.view">
            <field name="name">merge.device.os.form</field>
            <field name="model">merge.device.os</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                    </group>
                </form>
            </field>
        </record>

    </data>
</odoo>
